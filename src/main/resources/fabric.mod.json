{
  "schemaVersion": 1,
  "id": "deathcommands",
  "version": "${version}",

  "name": "Death Commands",
  "description": "Runs a command whenever you respawn/die.",
  "authors": [
    "NotCoded"
  ],
  "contact": {
    "homepage": "https://notcoded.cf/",
    "sources": "https://github.com/not-coded/DeathCommands",
    "issues": "https://github.com/not-coded/DeathCommands/issues"
  },

  "license": "GPL-3.0",
  "icon": "assets/deathcommands/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.notcoded.deathcommands.Main"
    ],
    "modmenu": [
      "net.notcoded.deathcommands.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "deathcommands.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": "1.19.x",
    "fabric-key-binding-api-v1": ">=1.0.12",
    "fabric-resource-loader-v0": ">=0.4.18",
    "cloth-config2": ">=4.9.0",
    "java": ">=16"
  }
}